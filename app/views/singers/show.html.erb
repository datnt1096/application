<div class="content">
  <h3><%= t ".singer" %></h3>
  <div class="row mt-5 mb-5">
    <div class="col-3">
      <%= image_tag "play.png", width: 150 %>
    </div>
    <div class="col-9">
      <h3 class="text-danger">
        <%= @singer.name %>
      </h3>

      <h5 class="text-white">
        <%= t ".description" %>
        <%= @singer.description %>
      </h5>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <h2 class="font-italic text-success"><%= t ".list-song" %></h2>
  </div>
  <ul>
      <%= render @singer.songs %>
  </ul>
</div>
