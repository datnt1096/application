<div class="row justify-content-center">
  <div class="col-md-6 pt-5">
    <center><h3 class="text-white">Thông tin người dùng</h3></center>
    <div class="modal-body">
      <%= form_tag managers_update_path do %>
        <div class="field text-white">
          <label>ID ứng dụng:</label>
          <%= text_field_tag :id, @app["id"], class: "form-control", disabled: true %>
        </div>
        <div class="field text-white">
          <label>Tên ứng dụng:</label>
          <%= text_field_tag :name, @app["name"], class: "form-control" %>
        </div>
        <div class="field text-white">
          <label>Trang chủ:</label>
          <%= text_field_tag :home_page, @app["home_page"], class: "form-control" %>
        </div>
        <div class="field text-white">
          <label>Mô tả:</label>
          <%= text_area_tag :description, @app["description"], class: "form-control" %>
        </div>
        <div class="field text-white">
          <label>Callback URL:</label>
          <%= text_field_tag :callback_url, @app["callback_url"], class: "form-control" %>
        </div>
        <button type="submit" class="btn btn-success">Cập nhật</button>
      <% end %>
    </div>
  </div>
</div>
